{
  "compilerOptions": {
    "typeRoots": [
      "overrides",
      "./node_modules/@types"
    ],
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@entity/*": ["src/schemas/*"],
      "@auth/*": ["src/authentication/*"],
      "@authorization/*": ["src/authorization/*"],
      "@interface/*": ["src/interfaces/*"],
      "@const": ["src/zconstant"],
      "@broker/*": ["src/broker/*"]
    },
    "skipLibCheck": true
  }
}
